{
  "expo": {
    "name": "Mi Jardín",
    "slug": "MiJardinApp",
    "scheme": "mijardin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f5f0e6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cristianlopez.mijardin"
    },
    "android": {
      "package": "com.cristianlopez.mijardin",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f5f0e6"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#5b9a6a",
          "sounds": []
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir acceso a tus fotos para identificar plantas",
          "cameraPermission": "Permitir acceso a la cámara para tomar fotos de plantas"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b0bc8bf8-e038-41e4-8b6e-6bf6dd868b4d"
      }
    },
    "owner": "cristianlopez"
  }
}
